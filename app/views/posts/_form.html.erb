<%= form_with model: [user, user.posts.build] do |form| %>
  <div class="flex flex-col px-4 py-2 border-b border-slate-950">
    <div>
      <%= form.text_area :body, required: true, class: "resize-none w-full border-none", placeholder: "What is going on?!" %>
    </div>
    <div class="bg-sky-700 hover:bg-sky-900 text-white font-bold ml-auto px-4 py-2 rounded">
      <%= form.submit %>
    </div>
  </div>
<% end %>
