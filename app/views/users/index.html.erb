<div>
  <%= render "posts/form", user: @user %>

  <% @followees.each do |followee| %>
    <% followee.posts.reverse.each do |post| %>
      <div class="flex flex-col border-b border-slate-950 px-4 py-2">
        <div class="flex justify-between">
          <div>
            <strong><%= link_to "#{followee.username}", show_user_path(followee) %></strong> . <%= post.created_at.to_fs(:long) %>
          </div>
        </div>
        <div>
          <p><%= post.body %></p>
        </div>
        <div class="flex space-x-20">
          <%= link_to do %>
            <%= icon('fa-regular', 'heart') %>
          <% end %>
          <%= link_to do %>
            <%= icon('fa-regular', 'comment') %>
          <% end %>
          <%= link_to do %>
            <%= icon('fa-solid', 'retweet') %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
